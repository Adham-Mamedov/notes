extends components/layout
block head 
  script(src="/static/js/index.js" defer) 

block main
  .card.center 
    if message
      .alert(class=`${message.type}`)= message.text
    h2 Create form
    form(action="/create-note" method="POST")
      .form-control 
        label(for="title") Title
        input(type="text" id="title" name="title")
      .form-control 
        label(for="text") Description
        textarea#text(name="description", cols="30", rows="5")
      button.btn.primary(type="submit") Create note